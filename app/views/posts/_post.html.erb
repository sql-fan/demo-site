<div id="<%= dom_id post %>" class="my-5 space-y-5">
  <% turbo_stream_from post %>
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Body:</strong>
    <%= post.body %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Image:</strong>
    <%= image_tag post.image, class: "text-gray-700 underline  w-40 hover:no-underline" if post.image.attached? %>
  </div>
</div>
